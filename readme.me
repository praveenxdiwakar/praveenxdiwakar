<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
<style>
  /* Reset & Base */
  * {margin:0;padding:0;box-sizing:border-box;}
  body {font-family:'Inter', sans-serif;background:#0d1117;color:#c9d1d9;line-height:1.6;}
  a {text-decoration:none;color:#58a6ff;}
  img {max-width:100%;display:block;}
  h1,h2,h3,h4,h5,h6 {color:#c9d1d9;margin-bottom:0.5em;}
  p {margin-bottom:1em;}
  code {background:#161b22;color:#f0f6fc;padding:2px 6px;border-radius:6px;font-family:'Fira Code', monospace;}

  /* Container */
  .container {width:90%;max-width:1200px;margin:0 auto;padding:2rem 0;}

  /* Header */
  header {text-align:center;margin-bottom:2rem;}
  header h1 {font-size:2.5rem;}
  header h3 {font-weight:400;color:#8b949e;}
  .typing-svg {margin:1rem 0;}

  /* Profile Views & Contributions */
  .profile-views, .contributions {text-align:center;margin-bottom:2rem;}
  .contributions img {border-radius:6px;margin-top:1rem;}

  /* About Me */
  .about {margin-bottom:2rem;}
  .about ul {list-style:none;padding-left:0;}
  .about ul li {margin-bottom:0.5rem;}
  .about ul li::before {
    content:"👉";
    margin-right:0.5rem;
  }

  /* Skills */
  .skills {margin-bottom:2rem;}
  .skills .badges a {
    display:inline-block;margin:0.25rem;
  }

  /* Fun Section */
  .fun {text-align:center;margin-bottom:2rem;}

  /* Connect */
  .connect {text-align:center;margin-bottom:2rem;}
  .connect a {margin:0 0.25rem;}

  /* Footer */
  footer {text-align:center;padding:1.5rem 0;border-top:1px solid #30363d;color:#8b949e;font-size:0.9rem;}

  /* Buttons */
  .btn {
    display:inline-block;padding:0.5rem 1rem;border-radius:6px;background:#21262d;color:#c9d1d9;font-weight:600;transition:0.3s;
  }
  .btn:hover {background:#30363d;color:#58a6ff;}

  /* Responsive */
  @media(max-width:768px){
    header h1 {font-size:2rem;}
    header h3 {font-size:1rem;}
  }
</style>
</head>
